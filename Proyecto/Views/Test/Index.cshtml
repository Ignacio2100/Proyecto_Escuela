@model Proyecto.Models.TestCLS
@{
    ViewBag.Title = "Evaluación";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f8ff;
            font-family: 'Comic Sans MS', cursive, sans-serif;
        }

        .containerr {
            margin-top: 50px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.2);
            padding: 20px;
            max-width: 900px;
            margin-left: auto;
            margin-right: auto;
        }

        h2 {
            color: #ff6347;
            text-align: center;
        }

        .btn-primary {
            background-color: #ff6347;
            border: none;
        }

            .btn-primary:hover {
                background-color: #ff4500;
            }

        .btn-secondary {
            background-color: #5cb85c;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #4cae4c;
            }

        .form-check {
            margin-bottom: 15px;
        }

        .correct {
            color: green;
            font-weight: bold;
            text-align: center;
        }

        .incorrect {
            color: red;
            font-weight: bold;
            text-align: center;
        }

        .question {
            border: 2px solid #ff6347;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 20px;
            background-color: #fff5f5;
        }

            .question h4 {
                margin: 0;
            }

        .alert {
            font-size: 1.2em;
        }
    </style>
</head>
<body>
    <div class="containerr">
        <h2>@ViewBag.Title</h2>

        <!-- Mensaje de error si existe -->
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        @if (Model.Preguntas != null && Model.Preguntas.Count > 0)
        {
            using (Html.BeginForm("EnviarRespuestas", "Test", FormMethod.Post))
            {
                <div class="mb-4">
                    <label for="NombreEstudiante">Nombre del Estudiante:</label>
                    @Html.TextBoxFor(m => m.NombreEstudiante, new { @class = "form-control", required = "required", placeholder = "Escribe tu nombre aquí..." })
                </div>

                for (int i = 0; i < Model.Preguntas.Count; i++)
                {
                    <div class="question">
                        <h4>Pregunta @(i + 1): @Model.Preguntas[i].Texto</h4>
                        @Html.HiddenFor(m => m.Preguntas[i].Id)
                        @Html.HiddenFor(m => m.Preguntas[i].Texto)
                        <div class="mb-3">
                            @for (int j = 0; j < Model.Preguntas[i].Opciones.Count; j++)
                            {
                                <div class="form-check">
                                    @Html.RadioButtonFor(m => Model.Preguntas[i].RespuestaSeleccionada, Model.Preguntas[i].Opciones[j], new { id = $"opcion_{i}_{j}", @class = "form-check-input", required = "required" })
                                    <label class="form-check-label" for="opcion_@(i)_@(j)">@Model.Preguntas[i].Opciones[j]</label>
                                </div>
                            }
                        </div>

                        @if (Model.Preguntas[i].RespuestaSeleccionada != null)
                        {
                            if (Model.Preguntas[i].RespuestaSeleccionada == Model.Preguntas[i].RespuestaCorrecta)
                            {
                                <p class="correct">¡Correcto!</p>
                            }
                            else
                            {
                                <p class="incorrect">Incorrecto. La respuesta correcta es: @Model.Preguntas[i].RespuestaCorrecta</p>
                            }
                        }
                    </div>
                }

                <button type="submit" class="btn btn-primary">Enviar Respuestas</button>
                <button type="button" class="btn btn-secondary" id="recargarPagina">Iniciar de Nuevo</button>
            }
        }
        else
        {
            <div class="alert alert-warning text-center">No se encontraron preguntas disponibles.</div>
        }
    </div>

    <script>
        // Espera hasta que el DOM esté completamente cargado
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("recargarPagina").addEventListener("click", function () {
                // Recarga la página actual
                location.reload();
            });
        });
    </script>
</body>
</html>
