<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
          
            font-family: 'Comic Sans MS', cursive;
            min-height: 100vh;
        }


        h3 {
            color: #ff6b6b;
            font-size: 4em;
            text-shadow: 3px 3px #feca57, 5px 5px #48dbfb;
            margin-bottom: 30px;
            padding: 20px;
            text-align: center;
            animation: bounce 2s infinite;
        }

        @@keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        .card-gallery {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 25px;

        }

        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            background-color: #ffffff;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.2);
            }

        .card-img-top {
            height: 180px;
            object-fit: cover;
        }

        .card-body {
            padding: 1.5rem;
        }

        .card-title {
            font-size: 1.3rem;
            color: #3d3d3d;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .btn-play {
            background: linear-gradient(45deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%);
            border: none;
            color: #4a4a4a;
            font-weight: 700;
            padding: 0.8rem 1.5rem;
            border-radius: 50px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-family: 'Balsamiq Sans', cursive;
            position: relative;
            overflow: hidden;
        }

            .btn-play::before {
                content: '🎮';
                position: absolute;
                left: -30px;
                transition: all 0.3s ease;
            }

            .btn-play:hover {
                background: linear-gradient(45deg, #fad0c4 0%, #ff9a9e 99%, #ff9a9e 100%);
                transform: scale(1.1);
                color: #3d3d3d;
                padding-left: 2.2rem;
            }

                .btn-play:hover::before {
                    left: 10px;
                }
    </style>
</head>
<body>
    <div class="container">
        <h3>Aprendizaje de Lenguaje Infantil</h3>
        <div class="card-gallery">
            @foreach (var game in games)
            {
                <div class="card">
                    <img src="~/Imagenes/@game.Image" alt="@game.Title" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@game.Title</h5>
                        <a href="@game.Url" class="btn btn-play" target="_blank">¡Jugar Ahora!</a>
                    </div>
                </div>
            }
        </div>

        <h3>Aprendizaje Matemática Infantil</h3>
        <div class="card-gallery">
            @foreach (var mate in mates)
            {
                <div class="card">
                    <img src="~/Imagenes/@mate.Image" alt="@mate.Title" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@mate.Title</h5>
                        <a href="@mate.Url" class="btn btn-play" target="_blank">¡Jugar Ahora!</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center mt-4 mb-4">
            <div class="col-auto">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Regresar</a>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>