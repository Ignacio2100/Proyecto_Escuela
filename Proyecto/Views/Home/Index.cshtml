@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mundo de Aprendizaje Infantil</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-yellow: #FFD700;
            --primary-blue: #1E90FF;
            --primary-white: #FFFFFF;
            --primary-black: #000000;
        }

        body {
            background-color: var(--primary-white);
            font-family: 'Comic Sans MS', cursive;
        }

        .card {
            border: 2px solid var(--primary-yellow);
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.3s;
            margin-bottom: 20px;
            background-color: var(--primary-white);
            display: flex;
            flex-direction: column;
      
        }

            .card:hover {
                transform: scale(1.05);
                border-color: var(--primary-blue);
            }

        .card-img-top {
            border-top-left-radius: 13px;
            border-top-right-radius: 13px;
            height: 200px;
            object-fit: cover;
        }

        h1 {
            color: var(--primary-blue);
            font-size: 4em;
            text-shadow: 3px 3px #feca57, 5px 5px rgba(0,0,0,0.1);       
            margin-bottom: 30px;
            animation: bounce 2s infinite;
        }

        @@keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .lead {
            font-size: 1.5rem;
            color: var(--primary-black);
        }

        .btn-primary {
            background-color: var(--primary-yellow);
            border-color: var(--primary-yellow);
            color: var(--primary-black);
        }

            .btn-primary:hover {
                background-color: var(--primary-blue);
                border-color: var(--primary-blue);
                color: var(--primary-white);
            }

        .card-title {
            color: var(--primary-blue);
        }

        .card-text {
            color: var(--primary-black);
        }

        .main-container {
            background-color: rgba(255, 255, 0, 0.3);
            border-radius: 40px;
            padding: 30px;
        }
    </style>
</head>
<body>
    <main class="container mt-4 main-container">
        <section class="text-center mb-5">
            <h1 class="display-4">¡Bienvenidos al Mundo del Aprendizaje!</h1>
            <p class="lead">
                Explora y aprende con nuestros divertidos módulos educativos
            </p>
        </section>

        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="~/Imagenes/Color.jpg" class="card-img-top" alt="Colores">
                    <div class="card-body">
                        <h5 class="card-title">Módulo de Colores</h5>
                        <p class="card-text">Aprende sobre los diferentes colores y sus combinaciones.</p>
                        <a href="@Url.Action("Index", "Color")" class="btn btn-primary">¡Vamos!</a>

                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="~/Imagenes/Figura.jpg" class="card-img-top" alt="Figuras Geométricas">
                    <div class="card-body">
                        <h5 class="card-title">Módulo de Figuras Geométricas</h5>
                        <p class="card-text">Descubre las formas geométricas y sus propiedades.</p>
                        <a href="@Url.Action("Index", "Geometricas")" class="btn btn-primary">¡Exploremos!</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="~/Imagenes/Animal.jpg" class="card-img-top" alt="Animales">
                    <div class="card-body">
                        <h5 class="card-title">Módulo de Tipos de Animales</h5>
                        <p class="card-text">Conoce los diferentes tipos de animales en el mundo.</p>
                        <a href="@Url.Action("Index", "Animales")" class="btn btn-primary">¡Conozcamos !</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="~/Imagenes/Abecedario.jpg" class="card-img-top" alt="Abecedario">
                    <div class="card-body">
                        <h5 class="card-title">Módulo de Abecedario</h5>
                        <p class="card-text">Aprende las letras del abecedario.</p>
                        <a href="@Url.Action("Index", "Abecedario")" class="btn btn-primary">¡Juguemos con las letras!</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="~/Imagenes/Vocal.jpg" class="card-img-top" alt="Vocales">
                    <div class="card-body">
                        <h5 class="card-title">Módulo de Vocales</h5>
                        <p class="card-text">Descubre las vocales y su uso en palabras.</p>
                        <a href="@Url.Action("Index", "Vocal")" class="btn btn-primary">¡Cantemos las vocales!</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="~/Imagenes/Fruta.jpg" class="card-img-top" alt="Frutas y Verduras">
                    <div class="card-body">
                        <h5 class="card-title">Módulo de Frutas y Verduras</h5>
                        <p class="card-text">Explora las diferentes frutas y verduras.</p>
                        <a href="#" class="btn btn-primary">¡A comer saludable!</a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>